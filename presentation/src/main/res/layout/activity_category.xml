<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.category.CategoryActivity">

    <data>
        <variable
            name="categoryVM"
            type="com.ddd4.dropit.presentation.ui.category.CategoryViewModel" />
        <import type="android.view.View"/>
        <import type="android.R.color"/>
        <import type="android.R.drawable"/>
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/space_16dp"
            app:elevation="0dp"
            app:liftOnScroll="true">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:contentInsetLeft="0dp"
                android:contentInsetStart="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:contentInsetRight="0dp"
                android:contentInsetEnd="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetEnd="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/space_12dp">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{() -> categoryVM.backButtonClick()}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/ic_arrow_back" />

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/space_16dp"
                        android:text="@{categoryVM.categoryName}"
                        android:textAppearance="@style/text.18sp.bold.dark"
                        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
                        app:layout_constraintStart_toEndOf="@+id/btnBack"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/ibSelectImage"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:paddingEnd="@dimen/space_8dp"
                        android:text="@{categoryVM.selectImageMode ? @string/select : @string/cancel }"
                        android:visibility="@{categoryVM.categoryItems.isEmpty() ? View.GONE : View.VISIBLE}"
                        android:onClick="@{() -> categoryVM.selectImageButtonClick()}"
                        app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvTitle" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.Toolbar>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvSortByLatest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> categoryVM.sortByLatestButtonClick()}"
                    android:paddingRight="@dimen/space_12dp"
                    android:text="@string/sort_by_latest"
                    android:visibility="@{categoryVM.categoryItems.isEmpty() ? View.GONE : View.VISIBLE}"
                    android:textColor="@{categoryVM.categoryItemSorting ? @color/blue1 : @color/gray1}"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tvSortByExpiration" />

                <TextView
                    android:id="@+id/tvSortByExpiration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> categoryVM.sortByExpirationButtonClick()}"
                    android:paddingRight="@dimen/space_20dp"
                    android:visibility="@{categoryVM.categoryItems.isEmpty() ? View.GONE : View.VISIBLE}"
                    android:text="@string/sort_by_expiration_date"
                    android:textAppearance="@style/text.12sp.regular.dark"
                    android:textColor="@{categoryVM.categoryItemSorting ? @color/gray1 : @color/blue1}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.ddd4.dropit.presentation.customview.BlockView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@+id/layout"
                    android:visibility="@{categoryVM.selectedImageState? View.VISIBLE : View.INVISIBLE }"
                    android:background="#80FFFFFF"
                    app:layout_constraintTop_toTopOf="@+id/layout"
                    app:layout_constraintEnd_toEndOf="@+id/tvSortByExpiration"
                    app:layout_constraintBottom_toBottomOf="@+id/layout"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDetailFolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="3"
                    app:listener="@{categoryVM.onItemClickListener}"
                    app:imageState="@{categoryVM.selectedImageState}"
                    app:categoryItem="@{categoryVM.categoryItems}"
                    tools:listitem="@layout/row_detail_folder"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/folderFloatingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_16dp"
            android:src="@drawable/ic_add_white_24dp"
            android:onClick="@{() -> categoryVM.floatingButtonClick()}"
            android:layout_gravity="bottom|end"/>

        <Button
            android:id="@+id/folderRectangleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility="gone"
            android:onClick="@{() -> categoryVM.nextButtonClicked()}"
            android:layout_margin="@dimen/space_16dp"
            android:background="@{categoryVM.isButtonActivated ? @drawable/bg_active_button : @drawable/bg_inactive_button}"
            android:text="@string/select_folder"
            android:textColor="#ffffff"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>